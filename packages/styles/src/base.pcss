*,
*::after,
*::before {
  box-sizing: border-box;
}

*:focus {
  outline: none !important; /* stylelint-disable-line */
}

html {
  height: 100%;
  font-size: $default-font-size;
}

body {
  height: 100%;
  color: $default-text-color;
  font-family: $default-font-family;
  font-style: normal;
  font-weight: normal;
  line-height: 1.4;
}

small {
  font-size: 12px;
}

a {
  text-decoration: none;
}
